<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="config_data_save_before">
        <observer name="konstanchuk_conf_log_config_data_save_before"
                  instance="Konstanchuk\ConfigurationLogger\Observer\Config\SaveBefore"/>
    </event>
    <event name="config_data_delete_before">
        <observer name="konstanchuk_conf_log_config_data_save_before"
                  instance="Konstanchuk\ConfigurationLogger\Observer\Config\DeleteBefore"/>
    </event>
</config>